<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/font_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_80"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_80"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/font_10"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试"
                android:textSize="@dimen/font_16"
                android:id="@+id/tv_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/font_5"
                android:layout_marginBottom="@dimen/font_5"
                android:text="测试"
                android:id="@+id/tv_summary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="测试"
                android:id="@+id/tv_author"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_1"
        android:background="@color/refresh_time_color"/>

</LinearLayout>